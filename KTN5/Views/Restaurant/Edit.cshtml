@model KTN5.Models.Restaurant
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Navbar.cshtml";
}


<head>
    <style>

        .restaurant-background {
            padding: 20px;
            background: #e0d7ff;
        }

        .editText {
            background: #ffffff;
            width: 500px;
            height: auto;
            margin: 40px auto;
            padding: 30px 30px;
            box-shadow: 3px 3px 3px 3px #d1d1d1;
            padding-left: 50px;
        }

        .editFrom {
            margin: 40px auto;
            padding-left: 70px;
        }

        .form-control {
            width: 350px;
        }

        .editText .btn {
            margin: 20px auto;
            height: 30px;
            width: 70px;
            border: none;
            background: #905ca2;
            border-radius: 10px 10px;
        }

            .editText.btn:hover {
                background: #5F1985;
            }

        .btnEdit {
            margin: 20px auto;
            height: 40px;
            width: 80px;
            border: none;
            background: #905ca2;
            border-radius: 10px 10px;
        }

            .btnEdit:hover {
                background: #5F1985;
            }
    </style>
</head>

<div class="restaurant-background">
    <div class="editText">
        <h3>修改餐廳資料</h3>
        <br />
        <div class="editForm">
            <form method="post">

                <input type="hidden" name="rId" value="@Model.rId" />
                <p>
                    餐廳<br />
                    <input type="text" class="form-control" name="rName" value="@Model.rName" />
                </p>
                <p>
                    電話<br />
                    <input type="text" class="form-control" name="rPhone" value="@Model.rPhone" />
                </p>
                <p>
                    地址<br />
                    <input type="text" class="form-control" name="rAddress" value="@Model.rAddress" />
                </p>
                <p>
                    開店時間<br />
                    <input type="text" class="form-control" name="startTime" value="@Model.startTime" />
                </p>
                <p>
                    關店時間<br />
                    <input type="text" class="form-control" name="endTime" value="@Model.endTime" />
                </p>

                <input type="submit" class="btnEdit btn-primary" value="送出" />


            </form>
            <div class="btnback-restaurant">
                @Html.ActionLink("返回 愛心待用餐廳", "List", new { @class = "btnback-restaurant", style = "color:#ffffff;" })
            </div>
        </div>
    </div>
</div>

