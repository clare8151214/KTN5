@model KTN5.Models.UserLogin

@{ ViewBag.Title = "登入"; }

<style>
    body {
        font-family: 'Noto Sans TC', sans-serif,system,'Inter', sans-serif,'Noto Sans TC', sans-serif;
        min-height: 100vh;
        padding: 20px;
        /* background: linear-gradient(45deg, rgba(19,25,31,1) 0%, rgba(38,51,64,1) 100%); */
        background: rgb(236, 235, 236);
        background-repeat: no-repeat;
        display: flex;
        flex-direction: row;
        align-items: center;
    } 

    .well {
        /* flex-grow: 1; */
        max-width: 500px;
        height: 650px;
        margin: 0 auto;
        text-align: center;
        box-shadow: none;
        background: #fff;
        box-shadow: 0px 6px 60px 0px rgba(38, 51, 64, 0.08);
        border: none;
        border-radius: 6px;
        padding: 50px 60px;
    }

    .form-group {
        outline-style: none;
        border-radius: 3px;
        padding: 6px 6px;
        margin: 2px 0;
        width: 280px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 700;
        font-family: 'Inter', sans-serif,'Noto Sans TC', sans-serif;
    }

    .pwd {
        width: 280px;
        height: 30px;
        /* background-color: #ccc; */
        display: flex;
        flex-direction: row;
        /* justify-content:flex-end; */
        /* margin: 70px; */
        justify-content: center;
        /* border: 1px solid red; */
    }

    .pwd-forget {
        font-size: 13px;
        font-weight: 300;
        width: 150px;
        height: 30px;
        /* outline: 1px solid red; */
        display: block;
        /* margin: 20px; */
    }

    .pwd-text {
        width: 150px;
        height: 30px;
        /* outline: 1px solid red; */
        display: block;
        font-size: 13px;
        font-weight: 300;
        margin-left: 100px;
        color: lighten(#717e88, 15%);
    }

    .helper-text {
        font-size: 13px;
        font-weight: 300;
        margin-top: 20px;
        color: lighten(#717e88, 15%);
    }

    .icons {
        width: 280px;
        height: 70px;
        /* background-color: #ccc; */
        display: flex;
        flex-direction: row;
        /* justify-content:flex-end; */
        /* margin: 70px; */
        justify-content: center;
        /* border: 1px solid red; */
    }

    .btn-icon {
        width: 60px;
        height: 60px;
        /* outline: 1px solid red; */
        display: block;
        height: 50px;
        width: 50px;
        border-radius: 50%;
        margin: 20px;
    }

        .btn-icon:hover {
            opacity: 0.8;
        }

    image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .btn {
        font-size: 16px;
        text-transform: uppercase;
        font-weight: 300;
        padding: 14px 40px;
        min-width: 280px;
        border: none;
        border-radius: 30px;
        background: #905ca2;
        transition: all .2s ease-in-out;
        margin-top: 30px;
    }

        .btn:hover {
            background-color: #5f1985;
        }
</style>

<div class="well">
    <h2>登入</h2>
    <br />
    @using (Html.BeginForm(new { @class = "form-User" }))
    {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model.account, htmlAttributes: new { @class = "control-label col-md-2" })*@
                
                @Html.EditorFor(model => model.account, new { htmlAttributes = new { @class = "form-control", placeholder = "信箱帳號" } })
                @Html.ValidationMessageFor(model => model.account, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control",id="pwd-1", placeholder = "密碼" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.RememberMe)
                                
                @Html.EditorFor(model => model.RememberMe)
                @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                
            </div>*@

            <div class="pwd">
                <div class="pwd-forget">
                    @Html.ActionLink("忘記密碼?", "ForgotPassword", "User", new { style = "color: #5f1985;" })
                </div>

                

                <div class="pwd-text">
                    <input type="checkbox" onclick="myFunction()">顯示密碼
                </div>
            </div>

            <div class="form-group">                
                <input type="submit" value="登入" class="btn btn-default" />
            </div>    
    }

    <p class="helper-text">———————— 使用第三方登入 ————————</p>
    <div class="icons">
        <div class="btn-icon">
            @*<input type="image" img src="/Views/images/Facebook_icon.png" width="50" height="50" alt="">*@
            <img src="~/images/Facebook_icon.svg" width="50" height="50" alt="" />
        </div>

        <div class="btn-icon">
            @*<input type="image" img src="Views/images/Google_icon.svg" width="50" height="50" alt="">*@
            <img src="~/images/Google_icon.svg" width="50" height="50" alt="" />

        </div>
    </div>
    <p class="helper-text">還沒有樂心帳號? @Html.ActionLink("註冊帳號", "Registration", "User", new { style = "color: #5f1985;" })</p>
</div>



@section Scripts{
    <script>
        function myFunction() {
            var x = document.getElementById("pwd-1");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}