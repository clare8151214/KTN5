@model KTN5.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>註冊</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">


    <style>
        body {
            font-family: 'Noto Sans TC', sans-serif, system, 'Inter', sans-serif, 'Noto Sans TC', sans-serif;
            min-height: 100vh;
            padding: 20px;
            /* background: linear-gradient(45deg, rgba(19,25,31,1) 0%, rgba(38,51,64,1) 100%); */
            background: rgb(236, 235, 236);
            background-repeat: no-repeat;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .well {
            /* flex-grow: 1; */
            max-width: 400px;
            height: 750px;
            margin: 0 auto;
            text-align: center;
            box-shadow: none;
            background: #fff;
            box-shadow: 0px 6px 60px 0px rgba(64, 62, 38, 0.08);
            border: none;
            border-radius: 6px;
            padding: 50px 60px;
        }

        .form-group {
            outline-style: none;
            border-radius: 3px;
            padding: 6px 6px;
            margin: 2px 0;
            width: 280px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 700;
            font-family: 'Inter', sans-serif, 'Noto Sans TC', sans-serif;
        }

        .pwd-text {
            font-size: 13px;
            font-weight: 300;
            margin-left: 180px;
            color: lighten(#717e88, 15%);
        }

        .helper-text {
            font-size: 13px;
            font-weight: 300;
            margin-top: 20px;
            color: lighten(#717e88, 15%);
        }

        .icons {
            width: 280px;
            height: 70px;
            /* background-color: #ccc; */
            display: flex;
            flex-direction: row;
            /* justify-content:flex-end; */
            /* margin: 70px; */
            justify-content: center;
            /* border: 1px solid red; */
        }

        .btn-icon {
            width: 60px;
            height: 60px;
            /* outline: 1px solid red; */
            display: block;
            height: 50px;
            width: 50px;
            border-radius: 50%;
            margin: 20px;
        }

            .btn-icon:hover {
                opacity: 0.8;
            }

        image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .btn {
            font-size: 16px;
            text-transform: uppercase;
            font-weight: 300;
            padding: 14px 40px;
            min-width: 280px;
            border: none;
            border-radius: 30px;
            background: #905ca2;
            transition: all .2s ease-in-out;
            margin-top: 30px;
        }

            .btn:hover {
                background-color: #5f1985;
            }

        .tabs .nav-pills li.nav-item {
            padding-left: 28px;
        }

        .tabs .nav-pills .nav-link {
            color: #5f1985;
        }

            .tabs .nav-pills .nav-link.active {
                background-color: #905ca2;
                color: white;
                /* border-radius: 30px; */
            }
    </style>
</head>

<body>
    <div class="well">
        <h2>註冊</h2>
        <br>
        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
        {
            if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong>  @ViewBag.Message
                </div>

                <p class="helper-text"> @Html.ActionLink("登入", "Login", "User", new { style = "color: #5f1985;" })</p>
            }
        }
        else
        {
            <div class="tabs">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">一般會員</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">公益團體</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <!-- ... -->

                        <form class="form-User" action="~/User/Registration" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" class="form-control" name="role" value="一般會員" />

                            <div class="form-group">
                                <input type="text" class="form-control" name="name" value="" placeholder="姓名" required>
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="email" class="form-control" name="account" value="" placeholder="註冊信箱" required>
                                @Html.ValidationMessageFor(model => model.account, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("EmailExist", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="password" class="form-control" name="password" value="" panel placeholder="密碼" id="pwd-1" maxlength="12" required>
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="password" class="form-control" name="ConfirmPassword" value="" panel placeholder="確認密碼" id="pwd-2" maxlength="12" required>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="pwd-text">
                                <input type="checkbox" onclick="myFunction()"> 顯示密碼
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg">註冊</button>
                        </form>

                        <p class="helper-text">———————— 使用第三方註冊 ————————</p>
                        <div class="icons">
                            <div class="btn-icon">
                                <input type="image" img src="~/images/Facebook_icon.svg" width="50" height="50" alt="">
                            </div>

                            <div class="btn-icon">
                                <input type="image" img src="~/images/Google_icon.svg" width="50" height="50" alt="">
                            </div>
                        </div>
                        <p class="helper-text">已有樂心帳號 @Html.ActionLink("直接登入", "Login", "User", new { style = "color: #5f1985;" })</p>
                    </div>


                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <!-- ... -->
                        <form class="form-Charity-Member" action="~/User/Registration" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" class="form-control" name="role" value="公益單位" />

                            <div class="form-group">
                                <input type="text" class="form-control" name="charityName" value="" placeholder="單位名" required>
                                @Html.ValidationMessage("CharityExist", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control" name="name" value="" placeholder="負責人" required>
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="email" class="form-control" name="account" value="" placeholder="註冊信箱" required>
                                @Html.ValidationMessageFor(model => model.account, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("EmailExist", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="password" class="form-control" name="password" value="" panel placeholder="密碼" id="pwd-3" maxlength="12" required>
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="password" class="form-control" name="ConfirmPassword" value="" panel placeholder="確認密碼" id="pwd-4" maxlength="12" required>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="pwd-text">
                                <input type="checkbox" onclick="myFunction()"> 顯示密碼
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg">註冊</button>
                        </form>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Error!</strong>@ViewBag.Message
                            </div>
                        }


                        <p class="helper-text">———————— 使用第三方註冊 ————————</p>
                        <div class="icons">
                            <div class="btn-icon">
                                <input type="image" img src="~/images/Facebook_icon.svg" width="50" height="50" alt="">
                            </div>
                            <div class="btn-icon">
                                <input type="image" img src="~/images/Google_icon.svg" width="50" height="50" alt="">
                            </div>
                        </div>
                        <p class="helper-text">已有樂心帳號 @Html.ActionLink("直接登入", "Login", "User", new { style = "color: #5f1985;" })</p>

                    </div>
                </div>
            </div>
        }

    </div>


    <script>
        function myFunction() {
            var x = document.getElementById("pwd-1");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }

            var y = document.getElementById("pwd-2");
            if (y.type === "password") {
                y.type = "text";
            } else {
                y.type = "password";
            }

            var xx = document.getElementById("pwd-3");
            if (xx.type === "password") {
                xx.type = "text";
            } else {
                xx.type = "password";
            }

            var yy = document.getElementById("pwd-4");
            if (yy.type === "password") {
                yy.type = "text";
            } else {
                yy.type = "password";
            }
        }
    </script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</body>

</html>