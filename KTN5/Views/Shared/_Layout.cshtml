<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/practice.css" rel="stylesheet" />*@
    <link href="~/Content/navbar.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <header class="navbar-header">
        <div class="wrapper">
            <div class="logo">
                <img src="~/images/LOGO.png" alt="" width="300px" />
            </div>
            <nav class="navbar-nav">
                <div class="dropdown">
                    <div class="activity">
                        <a href="#">公益活動<i class="fas fa-caret-down"></i></a>
                        <ul class="dropdown-content">
                            <li><a href="#">公益活動</a></li>
                            <li><a href="#">數位發票箱</a></li>
                            <li><a href="#">愛心捐款</a></li>
                        </ul>
                    </div>
                    <div class="invoice">
                        <a href="#">公益捐贈<i class="fas fa-caret-down"></i></a>
                        <ul class="dropdown-content">
                            <li><a href="@Url.Action("Index","Object")">物資捐贈</a></li>
                        </ul>
                    </div>
                    <a href="#">愛心餐廳</a>
                    <a href="#">捐血地圖</a>
                </div>
            </nav>
            <div class="buttons">
                <div class="login btn"><a href="@Url.Action("Login","User")">會員登入</a></div>
                <div class="register btn"><a href="@Url.Action("Registration","User")">註冊</a></div>
            </div>
        </div>
    </header>

    @RenderBody()
   
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @RenderSection("Scripts", false);
</body>
</html>