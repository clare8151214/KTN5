<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/practice.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <header>
        <div class="wrapper">
            <div class="logo">
                <img src="~/images/LOGO.png" alt="" width="300px" />
            </div>
            <nav>
                <div class="dropdown">
                    <div class="activity">
                        <a href="#">公益活動<i class="fas fa-caret-down"></i></a>
                        <ul class="dropdown-content">
                            <li><a href="#">@Html.ActionLink("公益活動", "Activity", "Home")</a></li>
                            <li><a href="#">數位發票箱</a></li>
                            <li><a href="#">愛心捐款</a></li>
                        </ul>
                    </div>
                    <div class="invoice">
                        <a href="#">公益捐贈<i class="fas fa-caret-down"></i></a>
                        <ul class="dropdown-content">
                            <li><a href="#">物資捐贈</a></li>
                        </ul>
                    </div>
                    <a href="#">愛心餐廳</a>
                    <a href="#">捐血地圖</a>
                </div>
            </nav>
            <div class="buttons">
                <div class="login btn"><a href="#">會員登入</a></div>
                <div class="register btn"><a href="#">註冊</a></div>
            </div>
        </div>
    </header>

    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - 樂心公益平台</p>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false);
</body>
</html>