@model IEnumerable<KTN5.Models.SponsorDetailView>
@{
    ViewBag.Title = "贊助紀錄";
    Layout = "~/Views/Shared/Navbar.cshtml";
    int count = 0;
}


@section Styles{

    <link href="~/Content/Invoice-details.css" rel="stylesheet" />
}
<section class="Invoice-details">
    <div class="container p-5">

        <div class="d-flex">
            <div class="col-6" style="height: 60px;">
                <h3 class="mb-3" style="font-weight:bold; color: #5f1985;">贊助紀錄</h3>
            </div>
            <div class="col-6" style="height: 60px;">

            </div>
        </div>
        <div class="d-flex">

            <div class="d-flex">
                <table class="table align-middle">
                    <thead class="table-dark">
                        <tr class="table-head" style="width: 100%;">
                            <th scope="col">編號</th>
                            <th scope="col">贊助專案</th>
                            <th scope="col">選擇方案</th>
                            <th scope="col">總金額</th>
                            <th scope="col">贊助時間</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model) {
                           count++;

                            <tr class="list">
                                <th scope="row" class="i-Id">@count</th>
                                <td class="i-Name"><a href="#">@item.fName</a></td>
                                <td class="i-Solution">@item.sName</td>
                                <td class="i-Money">NT$ @item.money.ToString("N0")</td>
                                <td class="i-Time">@item.created_at.ToString("yyyy/MM/dd")</td>
                            </tr>
                        
                        }
                        

                    </tbody>
                </table>
            </div>

        </div>
</section>